/* pages/order/order.wxss */
page {
  background-color: #f2f2f2;
  font-size: 32rpx;
}
.inline_block {
  display: inline-block;
}
/*  地址信息扩充空间  */
.default_address_info {
  flex: 4;
}
/*  地址图标  */
.default_address_icon {
  width: 37rpx;
  height: 37rpx;
  display: inline-block;
  margin-left: 41rpx;
  margin-right: 24rpx;
}

/*  默认地址信息  */
.default_address {
  width: 100%;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  border-top: 14rpx #f2f2f2 solid;
  background-color: #fff;
  font-weight: bold;
  display: flex;
  align-items: center; 
}

.default_address_room {
  margin-left: 10rpx;
}
.default_address_phone {
  margin-left: 10rpx;
}

.add_address {  
  width: 100%;
  padding-top: 26rpx;
  padding-bottom: 20rpx;
  border-top: 14rpx #f2f2f2 solid;
  background-color: #fff;
  font-weight: bold;
  display: flex;
  align-items: center; 
}
/*  用margin-bottom来平衡两个图标与文字的不平行 */
.add_address_content {
  color: #8d8d8d;
  font-weight: normal;
  margin-bottom: 10rpx;
  flex: 4;
}
.default_address_arrow {
  width: 60rpx;
  height: 60rpx;
  margin-right: 24rpx;
}

/*  order */
.order {
  margin-top: 14rpx;
  border-top: 2rpx solid #e3e3e3;
  padding-top: 20rpx;
  background-color: #fff;
}
.uploader_tip {
  color: #8d8d8d;
  font-weight: normal;
  font-size: 20rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
.order_image {
  width: 190rpx;
  margin-left: 38rpx;
  margin-right: 20rpx;
}
.order_content {
  display: flex;
  align-items: flex-start;
}
#input_box {
  display: flex;
}
#express_image{
  z-index: 4;
}
#uploader_input {
  z-index: -1;
}

.order_info_row {
  margin-bottom: 12rpx;
}
.order_code {
  display: flex;
}

.product_code_pre {
  width: 60rpx;
  height: 30rpx;
  margin-left: 12rpx;
  border: solid #696969 2rpx;
  border-radius: 5rpx;
  text-align: center;
}
.product_code_mid {
  width: 60rpx;
  height: 30rpx;
  border: solid #696969 2rpx;
  border-radius: 5rpx;
  text-align: center;
}
.product_code_post {
  width: 120rpx;
  height: 30rpx;
  border: solid #696969 2rpx;
  border-radius: 5rpx;
  text-align: center;
}
radio {
  transform: scale(0.70);  
}

.order_cost {
  padding-left: 38rpx;
  background-color: #fff;
  border-bottom: solid 2rpx #e4e4e4;
}

.order_cost_content {
  height: 100rpx;
  line-height: 100rpx;
  border-top: solid 2rpx #e4e4e4;
  display: flex;
  justify-content: space-between;
}
.ticket_word {
  flex: 6;
}
.ticket_image {
  margin-top: 24rpx;
  margin-left: 3rpx;
  margin-right: 24rpx;
  height: 60rpx;
  width: 60rpx;
}
.order_have_cell{
  margin-top:10rpx;
  margin-left: 24%;
  margin-right: 20%;
  height: 100rpx;
}
.order_have{
  margin-left: 15rpx;
  display: flex;
  justify-content: flex-start;
}
.order_have_word {
  color: #f94848;
  margin-top: 10rpx;
  font-size: 80%;
  width: 240rpx;
}
.order_buy_cell {
  width: 150rpx;
  margin-bottom: 80rpx;
  transform: scale(0.85)
}
.order_buy_btn {
  color: #fff;
  background-color: #1AAD19;
}
.order-btn-pay button {
  font-size: 36rpx;
  width: 470rpx;
  margin: 20rpx auto 0;
  border-radius: 50rpx;
  background-color: #1AAD19;
  color: #fff;
  
}